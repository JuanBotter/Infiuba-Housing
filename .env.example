# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/infiuba_alojamientos
# PGSSL=true
# Optional CA cert in PEM format for PG TLS verification.
# Supports escaped newlines (`\n`) or literal newlines.
# PGSSL_CA_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
# Development only: disable TLS certificate verification.
# Never enable in production.
# PGSSL_ALLOW_INSECURE=false

# Session cookie signing (strongly recommended)
AUTH_SECRET=replace-with-a-long-random-secret

# Emergency read-only fallback:
# when true, visitors can see property owner contacts without logging in.
# Student/reviewer contact info remains hidden for visitors.
# VISITOR_CAN_VIEW_OWNER_CONTACTS=true

# OTP email delivery
# Use `console` for local testing without sending real emails.
OTP_EMAIL_PROVIDER=brevo
# OTP_EMAIL_PROVIDER=console
# Optional: force one email to always use console OTP delivery (no provider send).
# Defaults to mock@email.com in non-production when unset.
# OTP_CONSOLE_ONLY_EMAIL=mock@email.com
BREVO_API_KEY=xkeysib-xxxxxxxxxxxxxxxxxxxx
BREVO_FROM_EMAIL=Infiuba Housing <your@email.com>
# Optional provider-agnostic sender fallback:
# OTP_FROM_EMAIL=Infiuba Housing <your@email.com>
# Optional alternative provider:
# OTP_EMAIL_PROVIDER=resend
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
# RESEND_FROM_EMAIL=Infiuba Housing <no-reply@your-domain.com>
